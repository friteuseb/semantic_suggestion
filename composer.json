{
    "name": "talan-hdf/semantic-suggestion",
    "type": "typo3-cms-extension",
    "description": "TYPO3 extension for suggesting semantically related pages with NLP capabilities",
    "version": "1.2.0",
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "Wolfangel Cyril",
            "email": "cyril.wolfangel@gmail.com"
        }
    ],
    "require": {
        "typo3/cms-core": "^12.0 || ^13.0",
        "nlp-tools/nlp-tools": "^0.1.3",
        "ext-json": "*",
        "guzzlehttp/guzzle": "^7.0",
        "thecodingmachine/safe": "^1.3",
        "symfony/process": "^5.0 || ^6.0"
    },
    "autoload": {
        "psr-4": {
            "TalanHdf\\SemanticSuggestion\\": "Classes/"
        }
    },
    "extra": {
        "typo3/cms": {
            "extension-key": "semantic_suggestion"
        }
    },
    "scripts": {
        "post-install-cmd": [
            "bash install_dependencies.sh"
        ],
        "post-update-cmd": [
            "bash install_dependencies.sh"
        ]
    }
}